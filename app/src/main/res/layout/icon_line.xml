<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="1"
    android:baselineAligned="false">

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.2">
        <ImageView
            android:id="@+id/icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginTop="24dp"
            android:layout_gravity="right"/>
    </FrameLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.8"
        android:orientation="vertical">
        <TextView
            android:id="@+id/icon_line_text"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:visibility="gone"
            android:textSize="18sp"
            android:textColor="@color/order_black_text"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="16dp"
            />
        <android.support.design.widget.TextInputLayout
            android:id="@+id/icon_line_phone_til"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="16dp">
            <EditText
                android:id="@+id/icon_line_phone_et"
                android:layout_width="match_parent"
                android:inputType="phone"
                android:layout_height="wrap_content"
                android:hint="@string/phone_hint"
                android:textColorHint="@color/lightBlue"
                android:textColor="@color/order_black_text"
                android:textSize="18sp"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/icon_line_comment_til"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="16dp">
            <EditText
                android:id="@+id/icon_line_comment_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/comment_hint"
                android:textColorHint="@color/lightBlue"
                android:textColor="@color/order_black_text"
                android:textSize="18sp"/>
        </android.support.design.widget.TextInputLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/lines_color"/>
    </LinearLayout>


</LinearLayout>